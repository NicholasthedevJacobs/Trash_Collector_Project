@model Trash_Collector.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
@section scripts{
    <!DOCTYPE html>
    <html>
    <head>
        <style>
            /* Set the size of the div element that contains the map */
            #map {
                height: 400px; /* The height is 400 pixels */
                width: 100%; /* The width is the width of the web page */
            }
        </style>
    </head>
    <body>
        <h3><center>Customer's Trash</center></h3>
        <!--The div element for the map -->
        <div id="map"></div>
        <script>
            // Initialize and add the map
            function initMap() {
                // The location of the Customers house
                var uluru = { lat: @Html.DisplayFor(model => model.Latitude), lng: @Html.DisplayFor(model => model.Longitude) };
                
                var map = new google.maps.Map(
                    document.getElementById('map'), { zoom: 15, center: uluru });
                // The marker, positioned at Customers house
                var marker = new google.maps.Marker({ position: uluru, map: map });
            }
        </script>
        
        <script defer
                src="https://maps.googleapis.com/maps/api/js?key=@KeysAPI.mapsKey&callback=initMap">
        </script>
    </body>
</html>


}
