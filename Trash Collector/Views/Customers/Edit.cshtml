                <label asp-for="StartDateEndOfPickups" class="control-label"></label>
                <input asp-for="StartDateEndOfPickups" class="form-control" />
                <span asp-validation-for="StartDateEndOfPickups" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateEndOfPickups" class="control-label"></label>
                <input asp-for="EndDateEndOfPickups" class="form-control" />
                <span asp-validation-for="EndDateEndOfPickups" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoneyOwed" class="control-label"></label>
                <input asp-for="MoneyOwed" class="form-control" />
                <span asp-validation-for="MoneyOwed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

